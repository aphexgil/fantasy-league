<div class="col-md-6 column-gap-3 login-box" style="width: 370px;">
  
  <h2>Log In</h2>

  <div style="border-style: solid; border-color: black; padding: 0px;">
    <form class="form login-form">
      <div style="display: flex; flex-direction: column; justify-content: center;">

          <div class="form-group" style="margin-top: 20px; font-size: 20px;">
            <label for="email-login" style="width: 90px; text-align: right;">Email: </label>
            <input class="form-input" type="text" id="email-login" style="width: 250px;"/>
          </div>
          <div class="form-group" style="margin-top: 20px; margin-bottom: 20px; font-size: 20px;">
            <label for="password-login" style="width: 90px; text-align: right;">Password: </label>
            <input class="form-input" type="password" id="password-login" style="width: 250px;"/>
